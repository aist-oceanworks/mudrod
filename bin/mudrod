cygwin=false
case "`uname`" in
CYGWIN*) cygwin=true;;
esac

# resolve links - $0 may be a softlink
THIS="$0"
while [ -h "$THIS" ]; do
  ls=`ls -ld "$THIS"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '.*/.*' > /dev/null; then
    THIS="$link"
  else
    THIS=`dirname "$THIS"`/"$link"
  fi
done

# if no args specified, show usage
if [ $# = 0 ]; then
  echo "   _____            .___                 .___"
  echo "  /     \  __ __  __| _/______  ____   __| _/"
  echo " /  \ /  \|  |  \/ __ |\_  __ \/  _ \ / __ | "
  echo "/    Y    \  |  / /_/ | |  | \(  <_> ) /_/ | "
  echo "\____|__  /____/\____ | |__|   \____/\____ | "
  echo "        \/           \/                   \/ "
  echo "Mining and Utilizing Dataset Relevancy from Oceanographic"
  echo "Datasets to Improve Data Discovery and Access."
  echo "Usage: run COMMAND"
  echo "where COMMAND is one of:"
  echo "  logingest           ingest logs into Mudrod"
  echo "Most commands print help when invoked w/o parameters."
  exit 1
fi

# get arguments
COMMAND=$1
shift

# some directories
THIS_DIR="`dirname "$THIS"`"
MUDROD_HOME="`cd "$THIS_DIR/.." ; pwd`"

# figure out which class to run
if [ "$COMMAND" = "logingest" ] ; then
  CLASS=esiptestbed.mudrod.main.MudrodEngine
  MODULE=core
#elif [ "$COMMAND" = "xyz" ] ; then
#  CLASS=esiptestbed.mudrod...
#  MODULE=xyz
else
  echo "unknown command"
  exit -1;
fi

for f in "$MUDROD_HOME"/core/lib/*.jar; do
  CLASSPATH=$f,$CLASSPATH
done

MUDROD_JOB=$MUDROD_HOME/$MODULE/target/mudrod-$MODULE-0.0.1-SNAPSHOT.jar
EXEC_CALL="spark-submit -classpath $CLASSPATH --jars $CLASSPATH --class $CLASS $MUDROD_JOB"

# check that spark can be found on the path
if [ $(which spark-submit | wc -l ) -eq 0 ]; then
  echo "Can't find the relevant spark-submit executable. Add SPARK_HOME/bin to the path"
  exit -1;
fi

# run it
printf "%s %s %s %s" "$EXEC_CALL" "$1" "$2" "$3" 
exec $EXEC_CALL $1 $2 $3

